<?xml version="1.0"?>
<config>
    <modules>
        <KProject_ShareASale>
            <version>0.1.0</version>
        </KProject_ShareASale>
    </modules>
    <global>
        <helpers>
            <kproject_shareasale>
                <class>KProject_ShareASale_Helper</class>
            </kproject_shareasale>
        </helpers>
        <events>
            <sales_order_place_after>
                <observers>
                    <kproject_shareasale_new_order>
                        <type>singleton</type>
                        <class>KProject_ShareASale_Model_Observer</class>
                        <method>newOrderTransaction</method>
                    </kproject_shareasale_new_order>
                </observers>
            </sales_order_place_after>
        </events>
    </global>
</config>
